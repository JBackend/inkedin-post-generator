# ============================
# Production Environment Variables
# ============================
# IMPORTANT: Copy this file to .env and fill in actual values
# Never commit .env file to version control

# ============================
# Server Configuration
# ============================

# Server port (use environment provided PORT or default to 3002)
PORT=3002

# Node environment (MUST be 'production')
NODE_ENV=production

# Session secret (IMPORTANT: Generate a new secure random string for production)
# Generate with: openssl rand -hex 64
SESSION_SECRET=REPLACE_WITH_SECURE_RANDOM_STRING

# ============================
# Database
# ============================

# PostgreSQL connection string (update with production database credentials)
# Format: postgresql://username:password@hostname:port/database
DATABASE_URL=postgresql://user:password@production-host:5432/linkedin_post_generator

# ============================
# LinkedIn OAuth
# ============================

# LinkedIn OAuth credentials from developer portal
LINKEDIN_CLIENT_ID=your_production_client_id
LINKEDIN_CLIENT_SECRET=your_production_client_secret

# IMPORTANT: Update with your production domain
LINKEDIN_CALLBACK_URL=https://yourdomain.com/auth/linkedin/callback

# ============================
# API Keys
# ============================

# Anthropic Claude API key
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ============================
# Client Configuration
# ============================

# Frontend URL (for CORS and redirects)
# IMPORTANT: Update with your production frontend URL
CLIENT_URL=https://yourdomain.com

# ============================
# Optional: Security & Performance
# ============================

# Maximum request body size (default: 10mb)
# MAX_REQUEST_SIZE=10mb

# Session cookie settings (recommended for production)
# SESSION_COOKIE_SECURE=true
# SESSION_COOKIE_HTTPONLY=true
# SESSION_COOKIE_SAMESITE=strict

# Rate limiting (requests per minute)
# RATE_LIMIT=100
